@model IEnumerable<BuildingsAccounting.Web.Models.BuildingTableModel>

@{
    ViewBag.Title = "Власні будівлі";
}

<h2 class="mt-4 text-center">@ViewBag.Title</h2>

<div class="table-scroll form-horizontal col-12 col-sm-10 p-3 mx-auto my-4 bg-white rounded shadow">
    @Html.ActionLink("Додати будівлю", "Create", null, new { @class = "btn btn-success mb-3" })

    <table class="table table-striped table-dark">
        <thead>
            @Html.Partial("_TableHead", Model)
        </thead>
        <tbody>
            @Html.Partial("_TableBody", Model)
        </tbody>
    </table>
</div>