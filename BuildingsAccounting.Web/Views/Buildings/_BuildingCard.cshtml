@using BuildingsAccounting.Web.Helpers
@model BuildingsAccounting.Web.Models.BuildingTableModel

<div class="wrapper p-3 mt-3 mx-auto mx-lg-0 col-8 col-md-5 col-lg-3 d-flex flex-wrap">
    <div class="card shadow h-100">
        @Html.Image(Model.Image, "card-img-top")
        
        <div class="card-body d-flex flex-column justify-content-between">
            <div class="content">
                @Html.StringInfo("Тип будівлі", Model.BuildingTypeName)
                @Html.StringInfo("Адреса", Model.Address)
                @Html.ValueInfo("Кількість поверхів", Model.FloorsNumber)
                @Html.ValueInfo("Площа", Model.Area)
            </div>
            <a href=@string.Format("Будівля_{0}", Model.Id) class="btn btn-info stretched-link float-right mt-3 mb-0">Повна інформація</a>
        </div>
    </div>
</div>